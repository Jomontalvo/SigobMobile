<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="SigobMobile.Views.LoginPage" 
             BindingContext="{Binding Main, Source={StaticResource Locator}}" 
             Title="Login">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Login}">
            <StackLayout Padding="20,50,20,20">
                <Image WidthRequest="240" Source="sigob_logo">
                </Image>
                <Label 
                    VerticalOptions="CenterAndExpand" 
                    FontAttributes="Bold" 
                    FontSize="Large" 
                    HorizontalOptions="CenterAndExpand" 
                    Text="Login">
                </Label>
                <Entry 
                    Keyboard="Default"
                    Margin="0,10" 
                    Placeholder="User"
                    Text="{Binding UserName, Mode=TwoWay}">
                </Entry>
                <Entry 
                    IsPassword="true" 
                    Margin="0,10" 
                    Placeholder="Password"
                    Text="{Binding Password, Mode=TwoWay}">
                </Entry>
                <StackLayout
                    Margin="0,10">
                    <Entry
                        IsEnabled="false"
                        Placeholder="Country - Institution"
                        Text="{Binding Institution, Mode=TwoWay}">
                    </Entry>
                    <!--<StackLayout.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="{Binding ListCountriesCall}"
                             NumberOfTapsRequired="1">
                        </TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>-->
                </StackLayout>
                <ActivityIndicator 
                    IsRunning="{Binding IsRunning, Mode=TwoWay}"
                    VerticalOptions="CenterAndExpand">
                </ActivityIndicator>
                <Button 
                    BackgroundColor="Navy"
                    Command="{Binding LoginCommand}"
                    Text="Login" 
                    TextColor="White">
                </Button>
                <Label HorizontalOptions="Center" Text="Forgot your password?" VerticalOptions="CenterAndExpand">
                </Label>
                <Image Source="ods_logo" VerticalOptions="EndAndExpand" WidthRequest="280">
                </Image>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>