<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="SigobMobile.Views.SecurityPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:local="clr-namespace:SigobMobile.Helpers"
             xmlns:telerikInput="clr-namespace:Telerik.XamarinForms.Input;assembly=Telerik.XamarinForms.Input"
             BackgroundColor="{StaticResource defaultBackgroundView}"
             FlowDirection="{x:Static Device.FlowDirection}"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="{local:Translate ChangePasswordTitle}"
             ios:Page.UseSafeArea="true">
    <ContentPage.ToolbarItems>
        <!-- Change password -->
        <ToolbarItem
            BindingContext="{Binding Profile}"
            Command="{Binding SaveCommand}"
            Text="{local:Translate Ok}"
            Order="Primary" 
            Priority="0">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <telerikInput:BorderStyle 
            x:Key="EntryBorderStyle" 
            BorderThickness="0,0,0,1"
            BorderColor="{StaticResource grayBorder}">
        </telerikInput:BorderStyle>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Security}">
            <Image
                Margin="0,10,0,0"
                HorizontalOptions="Center"
                Source="ic_pwd_security">
            </Image>
            <StackLayout
                Padding="20,10,20,10">
                <Label
                    FontSize="Small"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    Text="{local:Translate ChangePasswordText}">
                </Label>
                <Grid
                    Padding="0, 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <telerikInput:RadEntry
                        BorderStyle="{StaticResource EntryBorderStyle}"
                        FlowDirection="{x:Static Device.FlowDirection}"
                        Grid.Column="0" 
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        IsPassword="{Binding IsPassword, Mode=TwoWay}"
                        Margin="0,5"
                        Padding="0"
                        WatermarkText="{local:Translate NewPassword}"
                        Text="{Binding NewPassword, Mode=TwoWay}">
                    </telerikInput:RadEntry>
                    <Image 
                        Grid.Column="1"
                        Grid.Row="0"
                        HorizontalOptions="End"
                        IsVisible="{Binding IsVisibleIconViewPassword, Mode=TwoWay}"
                        Margin="5,0,5,2"
                        Source="{Binding IconViewPassword}" 
                        VerticalOptions="Start"
                        WidthRequest="24">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding ShowHidePasswordCommand}"
                                NumberOfTapsRequired="1"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <telerikInput:RadEntry
                        BorderStyle="{StaticResource EntryBorderStyle}"
                        FlowDirection="{x:Static Device.FlowDirection}"
                        Grid.Column="0" 
                        Grid.ColumnSpan="2"
                        Grid.Row="1"
                        IsPassword="{Binding IsNewPassword, Mode=TwoWay}"
                        Margin="0,5"
                        Padding="0"
                        WatermarkText="{local:Translate RepeatNewPassword}"
                        Text="{Binding RepeatNewPassword, Mode=TwoWay}">
                    </telerikInput:RadEntry>
                    <Image 
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalOptions="End"
                        IsVisible="{Binding IsVisibleIconViewPassword, Mode=TwoWay}"
                        Margin="5,0,5,2"
                        Source="{Binding IconViewPassword}" 
                        VerticalOptions="Start"
                        WidthRequest="24">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding ShowHidePasswordCommand}"
                                NumberOfTapsRequired="1"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </StackLayout>
            <Button 
                BackgroundColor="{StaticResource darkBlue}"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                Text="{local:Translate ChangePasswordTitle}" 
                TextColor="White"
                FontSize="Medium">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
