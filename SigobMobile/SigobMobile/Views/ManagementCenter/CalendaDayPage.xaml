<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:telerikInput="clr-namespace:Telerik.XamarinForms.Input;assembly=Telerik.XamarinForms.Input"
    xmlns:lang="clr-namespace:SigobMobile.Helpers"
    x:Class="SigobMobile.Views.ManagementCenter.CalendaDayPage"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    Title="{lang:Translate AgendaViewTitle}"
    ios:Page.UseSafeArea="true">
    <NavigationPage.TitleView>
        <StackLayout
            BindingContext="{Binding CalendarDay}"
            Orientation="Horizontal" 
            VerticalOptions="Center" 
            HorizontalOptions="FillAndExpand">
            <Label 
                Text="{lang:Translate HomeMenu}" 
                FontSize="Default"
                FontAttributes="Bold"
                HorizontalOptions="StartAndExpand"
                HorizontalTextAlignment="Start"
                TextColor="{OnPlatform Android=White, iOS={StaticResource iOSBlue}}"
                VerticalTextAlignment="Center">
            </Label>
            <ImageButton
                BackgroundColor="Transparent"
                Command="{Binding InstructionsListCommand}"
                HorizontalOptions="End"
                Source="ic_bt_instructions">
            </ImageButton>
            <ImageButton
                BackgroundColor="Transparent"
                Command="{Binding SetCalendarViewModeCommand}"
                HorizontalOptions="End"
                Source="ic_bt_calendar_view">
            </ImageButton>
            <ImageButton
                BackgroundColor="Transparent"
                Command="{Binding SearchEventCommand}"
                HorizontalOptions="End"
                Source="ic_bt_search">
            </ImageButton>
            <ImageButton
                BackgroundColor="Transparent"
                Command="{Binding AddCommand}"
                HorizontalOptions="End"
                IsVisible="{OnPlatform Android=false, iOS=true}"
                Source="ic_bt_add">
            </ImageButton>
        </StackLayout>
    </NavigationPage.TitleView>
    <!-- Content Page -->
    <ContentPage.Content>
        <AbsoluteLayout
            BindingContext="{Binding CalendarDay}">
            <ActivityIndicator
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                IsVisible="{Binding IsRunning, Mode=TwoWay}"
                IsRunning="{Binding IsRunning, Mode=TwoWay}">
            </ActivityIndicator>
            <!--Calendar-->
            <telerikInput:RadCalendar 
                x:Name="calendar" 
                ViewMode="{Binding CalendarView, Mode=TwoWay}"
                SchedulingUiEnabled="false"
                AppointmentsSource="{Binding Events}">
                <telerikInput:RadCalendar.AppointmentsStyle>
                    <telerikInput:CalendarAppointmentsStyle DisplayMode="Shape" />
                </telerikInput:RadCalendar.AppointmentsStyle>
                <telerikInput:RadCalendar.DayViewSettings>
                    <telerikInput:DayViewSettings
                        DayStartTime="05:00:00"
                        DayEndTime="23:00:00"
                        TimelineInterval="1:00">
                    </telerikInput:DayViewSettings>
                </telerikInput:RadCalendar.DayViewSettings>
            </telerikInput:RadCalendar>
            <!--Button Add for Android-->
            <ImageButton
                AbsoluteLayout.LayoutBounds="1,1,-1,-1"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="Transparent"
                Command="{Binding AddCommand}"
                Margin="0,0,10,50"
                Source="ic_bt_add_fill"
                WidthRequest="50"
                IsVisible="{OnPlatform Android=true, iOS=false, UWP=true}">
            </ImageButton>
            <!--Bottom ToolBar-->
            <Grid
                AbsoluteLayout.LayoutBounds=".5,1,1,.1"
                AbsoluteLayout.LayoutFlags="All"
                ColumnSpacing="0"
                RowSpacing="0"
                VerticalOptions="End">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <BoxView
                    HeightRequest="1"
                    BackgroundColor="{StaticResource accesoryGray}"
                    Grid.Row="0">
                </BoxView>
                <Grid 
                    BackgroundColor="{StaticResource softGray}"
                    Grid.Row="1" 
                    VerticalOptions="End" 
                    RowSpacing="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button 
                        BackgroundColor="Transparent" 
                        BindingContext="{x:Reference Name=calendar}"
                        Grid.Column="0"
                        Text="{lang:Translate Today}">
                    </Button>
                    <Button 
                        BackgroundColor="{StaticResource softGray}"
                        Command="{Binding OpenCalendarsCommand}"
                        Grid.Column="1" 
                        Text="{lang:Translate CalendarsTitle}">
                    </Button>
                    <Button 
                        BackgroundColor="{StaticResource softGray}"
                        Command="{Binding OpenFitersCommand}"
                        Grid.Column="2" 
                        Text="{lang:Translate Filters}">
                    </Button>
                </Grid>
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
